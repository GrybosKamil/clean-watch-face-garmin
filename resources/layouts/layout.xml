        text="" 
        x="center" 
        y="5%" 
        width="50%"
        height="10%" 
        justification="Graphics.TEXT_JUSTIFY_CENTER" 
        color="#000000"
        >
        <fonts>
            <font>Graphics.FONT_MEDIUM</font>
            <font>Graphics.FONT_XTINY</font>
        </fonts>
    </text-area>

    <text-area id="TimeLabel"
        text="" 
        x="center"
        y="center"
        width="50%" 
